<%- include('./includes/head') %> 
<%- include('./includes/nav') %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Phonebook</h1>

      <p class="text-center lead">All your contacts listed in a simple and beautiful way.</p>
      <%- include('includes/messages')  %> 

      <% if (contacts.length > 0) { %>
        <div class="responsive-table">
          <table class="table my-3">
            <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.firstName %></td>
                <td><%= contact.lastName %></td>
                <td><%= contact.phoneNumber %></td>
                <td><%= contact.email %></td>
                <td><a href="/contact/<%= contact._id %>">Edit</a></td>
                <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Delete</a></td>
              </tr>      
            <% }); %>
          </table>
        </div>
      <% } else { %>
        <p class="text-center lead">There is no contacts in your book!.</p>
      <% } %> 
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer')  %> 

